<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Edit Profile Header -->
      <div class="text-center mb-4">
        <h2 class="fw-bold">Edit Profile</h2>
      </div>

      <!-- Edit Profile Form -->
      <div class="card shadow border-0">
        <div class="card-body p-4">
        <%= form_for @user, url: profile_path, method: :patch, html: { multipart: true } do |f| %>
            <!-- Name Field -->
            <div class="form-group mb-3">
              <%= f.label :name, class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your full name' %>
            </div>

            <!-- Email Field -->
            <div class="form-group mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', readonly: true %>
            </div>

            <!-- Phone Number Field -->
            <div class="form-group mb-3">
              <%= f.label :phone_number, class: 'form-label' %>
              <%= f.text_field :phone_number, class: 'form-control', placeholder: 'Enter your phone number' %>
            </div>

            <!-- Home Address Field -->
            <div class="form-group mb-3">
              <%= f.label :home_address, class: 'form-label' %>
              <%= f.text_field :home_address, class: 'form-control', placeholder: 'Enter your home address' %>
            </div>

            <!-- Account Number Field -->
            <div class="form-group mb-3">
              <%= f.label :account_number, class: 'form-label' %>
              <%= f.text_field :account_number, class: 'form-control', readonly: true %>
            </div>

            <!-- Profile Picture Field -->
            <div class="form-group mb-4">
              <%= f.label :profile_picture, class: 'form-label' %>
              <%= f.file_field :profile_picture, class: 'form-control' %>
              <small class="form-text text-muted">Upload a profile picture (optional).</small>
            </div>

            <!-- Save Changes Button -->
            <div class="d-grid gap-2">
              <%= f.submit 'Save Changes', class: 'btn btn-success btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Back to Profile Button -->
      <div class="text-center mt-4">
        <%= link_to 'Back to Profile', profile_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
