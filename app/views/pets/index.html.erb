<div class="container mt-5">
  <h1 class="text-center mb-4">Pets Profile</h1>
  <div class="d-flex justify-content-center mb-3">
    <%= link_to "Add Pet", new_pet_path, class: "btn btn-success" %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success text-center" role="alert">
      <%= notice %>
    </div>
  <% end %>

    <div class="row">
      <% @pets.each do |pet| %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <% if pet.photo.present? %>
              <%= image_tag pet.photo.url, class: 'card-img-top img-fluid pet-photo' %>
            <% else %>
              <img src="path/to/placeholder-image.png" class="card-img-top img-fluid pet-photo" alt="Placeholder Image">
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= pet.name %>
                <% post = Post.find_by(name: pet.name) %>
                <% if post.present? %>
                  <span class="text-warning" data-toggle="tooltip" title="Already Reported">ðŸš¨</span>
                <% end %>
              </h5>
              <p class="card-text"><strong>Breed:</strong> <%= pet.breed %></p>
              <p class="card-text"><strong>Species:</strong> <%= pet.species %></p>
              <p class="card-text"><strong>Color:</strong> <%= pet.color %></p>
              <div class="d-flex justify-content-center">
                  <%= link_to 'View', pet_path(pet), class: 'btn btn-primary btn-sm me-2' %>

                <% if post.present? && post.user == current_user %>

                  <%= link_to 'Edit Report', edit_post_path(post), class: 'btn btn-warning btn-sm me-2' %>
                  <%= button_to 'Remove Report', post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this report?' }, class: 'btn btn-danger btn-sm' %>

                <% elsif post.blank? %>
                  <%= button_to 'Remove', pet_path(pet), method: :delete, data: { confirm: 'Are you sure you want to delete this pet?' }, class: 'btn btn-danger btn-sm me-2' %>
                  <%= button_to 'Report Missing', report_missing_pet_path(pet), method: :post, class: 'btn btn-danger btn-sm' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>