<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h2 class="text-center mb-4"><%= action_name == 'edit' ? 'Edit Pet' : 'New Pet' %></h2>

      <%= form_for @pet, html: { class: "form" } do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter pet name' %>
        </div>

        <div class="form-group">
          <%= f.label :color, class: 'form-label' %>
          <%= f.text_field :color, class: 'form-control', placeholder: 'Enter pet color' %>
        </div>

        <div class="form-group">
          <%= f.label :breed, class: 'form-label' %>
          <%= f.text_field :breed, class: 'form-control', placeholder: 'Enter breed' %>
        </div>

        <div class="form-group">
          <%= f.label :species, class: 'form-label' %>
          <%= f.text_field :species, class: 'form-control', placeholder: 'Enter species' %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :photo, class: 'form-label' %>
          <%= f.file_field :photo, class: 'form-control-file' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
