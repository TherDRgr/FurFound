<div class="container text-center mt-5">
  <h1 class="display-4 mb-4">FurFound</h1>
  <p class="lead mb-4">A platform to help reunite lost pets with their owners.</p>

  <% if current_user %>
    <p class="lead mb-4">Hello <%= current_user.role.capitalize %>, welcome to FurFound!</p>

    <% if current_user.admin? %>
      <%= render 'pages/admin' %>
    <% end %>

  <% else %>
    <p class="lead mb-4">You are not signed in.</p>
    <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary btn-lg me-2' %>
    <%= link_to "Login", new_user_session_path, class: 'btn btn-secondary btn-lg' %>
  <% end %>
</div>

