<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Species</th>
      <th>QR Code</th>
      <th>Breed</th>
      <th>Last Seen Location</th>
      <th>Date Reported</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <div id="posts">
      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post } %>
      <% end %>
    </div>
  </tbody>
</table>

<%= link_to "New post", new_post_path %>
