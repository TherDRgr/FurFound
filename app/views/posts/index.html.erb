<h1 class="d-flex justify-content-center m-4">Lost Pets</h1>

<h1 class="d-flex justify-content-center"><%= link_to 'Report New', new_post_path, class: 'btn btn-success' %> </h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Color</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Last Seen Location</th>
      <th>Date Missing</th>
      <th>Reported By</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= render 'post', post: post %>
    <% end %>
  </tbody>
</table>
