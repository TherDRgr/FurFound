

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-lg p-4 m-4">
      <div class="card-body m-4">
      <h2 class="text-center m-4">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-login' }) do |f| %>

          <div class="form-group mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: 'form-label' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: 'form-label' %>
            </div>
          <% end %>

          <div class="form-group text-center justify-content-center m-3">
            <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary btn-block' %>
          </div>

        <% end %> 
      </div>
    </div>
  </div>
</div>
