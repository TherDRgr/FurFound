<div class="container d-flex justify-content-center vh-100%">
  <div class="card p-4" style="width: 100%; max-width: 400px;">
    <div class="card-body">

    <!-- Omniauth provider buttons -->
    <%- if devise_mapping.omniauthable? %>
      <div class="text-center mb-3">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= button_to "Sign in with Google", omniauth_authorize_path(resource_name, provider), class: "btn btn-danger btn-block", method: :post, data: { turbo: false } %>
        <% end %>
      </div>
    <% end %>

      <!-- Log in link -->
      <%- if controller_name != 'sessions' %>
        <div class="text-center mb-3">
          <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>

      <!-- Sign up link -->
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="text-center mb-3">
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary btn-block' %>
        </div>
      <% end %>

      <!-- Forgot password link -->
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="text-center mb-3">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link' %>
        </div>
      <% end %>

      <!-- Resend confirmation instructions link -->
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <div class="text-center mb-3">
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-link' %>
        </div>
      <% end %>

      <!-- Resend unlock instructions link -->
      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <div class="text-center mb-3">
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-link' %>
        </div>
      <% end %>


    </div>
  </div>
</div>
